//#################### BLEE CODE #########################

/*
The state of the device is obtained by cascading the following 4 status flags
1) ON/OFF 
	*H : ON
	*L : OFF

2) Connectivity
	*C : Connected
	*I : Connecting
	*O : Not Connected

3) Mode
	*A : Configured as Access Point
	*N : Not configured as Access Point

4) Charging 
	*E : Charging 
	*B : Not Charging/ Battery powered
*/

char prev_state[4] = “HOAB”;	//ON, Not connected
char cur_state[4] = “HOAX”;

enum {
	POW,
	CON,
	AP,
	CHG
};

char state[4] = “HONB”

void loop()
{
	if(prev_state != cur_state)
	{
		updateState();
	}

}


void updateState()
{
switch(state[POW]){
	case H:		//Device ON
	//code 
	
	break;
	
	case L:		//Device OFF
	//code 
	//sysLED OFF
	//CH_PD LOW
	//userLED OFF
	break;
}

switch(state[CON]){
	case C:		//connected
	//code 
	break;
	
	case I:		//connecting
	//code 
	break;

	case O:	//not connected
	//code
	break;
}

switch(state[AP]){
	case A:		//Access Point
	//code 
	break;
	
	case N:	//not Access Point
	//code 
	break;
}

switch(state[CHG]){
	case E:		//Charging
	//code 
	break;
	
	case B:		//Battery powered
	//code 
	break;
}

